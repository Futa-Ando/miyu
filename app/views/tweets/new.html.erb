<%= stylesheet_link_tag 'news', :media => "all" %>

<h1>New Post</h1>

<div class="matome">
  <div class="new">
    <%= form_for @tweet do |f| %>
      <div class="field">
        <% @category.each do |t| %>
          <%= f.radio_button :genre, t.id %><%= t.name %>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body , class:"body" ,:size=>"50x10" %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <br>
      <%= f.submit "Tweetする" %>
    <% end %>
    <br>
  </div>
  <br>
</div>