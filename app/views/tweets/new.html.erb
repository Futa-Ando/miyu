<%= stylesheet_link_tag 'news', :media => "all" %>

<div class="new">
  <div class="sinki">
  <p>新規Tweet</p>
  </div>
  <%= form_for @tweet do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, :size => 140 %>
      <%= f.label :body %>
      <%= f.text_field :body, :size => 140 %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <%= f.submit "Tweetする" %>
  <% end %>
  <%= link_to "Tweet一覧に戻る", tweets_path %>
</div>